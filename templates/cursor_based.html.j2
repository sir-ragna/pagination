{% extends "base.html.j2" %}

{% block head %}
<style>
    .nickname { text-decoration: underline; }
    .timestamp { color: #666; }
    .message { font-size: 20px; }
    .navigation { text-align: center; font-size: 25px; }
</style>
{% endblock head %}

{% block content %}

<div class="container">
    <div class="row navigation">
        <div class="col">
            <a href="{{ url_for('cursor_based') }}">start</a>
        </div>
        <div class="col">
            <a href="{{ url_for('homepage') }}">home</a>
        </div>
        <div class="col">
            <a href="{{ url_for('cursor_based') }}?cursor={{cursor}}">next page</a>
        </div>
    </div> <!-- end .row.navigation -->
    <div id="feed">
        {% for post in posts %}
            <div class="row">
                <div class="col">
                    <span class="nickname">{{ post.nickname }}</span>
                    <span class="timestamp">{{ post.timestamp }}</span>
                    <br>
                    <span class="message">{{ post.content }}</span>
                    <br>
                    {% if post.type == 'img' %}
                        <img src="{{ post.url }}">
                    {% else %}
                        <a href="{{ post.url }}">{{ post.filename }}</a>
                    {% endif %}
                </div>
            </div>
            <hr>
        {% endfor %}
    </div> <!-- end #feed -->
    <div class="row navigation">
        <div class="col">
            <a href="{{ url_for('cursor_based') }}">start</a>
        </div>
        <div class="col">
            <a href="{{ url_for('homepage') }}">home</a>
        </div>
        <div class="col">
            <a href="{{ url_for('cursor_based') }}?cursor={{cursor}}">next page</a>
        </div>
    </div> <!-- end .row.navigation -->
</div> <!-- end .container -->

{% endblock content %}